      <main>
        <section class="categoreis">
          <% if(categories !='' ) { %>
            <% categories.forEach(function(category, index) { %>
              <div class="category">
                <a href="/categories/<%= category.name %>" class="category__link">
                  <div class="category__img">
                    <img src="/img/<%- category.image%>" alt="<%- category.name%>" />
                  </div>
                  <div class="category__name pt-1"><%- category.name%></div>
                </a>
              </div>
              <%}) %>
                <% } %>

                  <div class="category">
                    <a href="/categories" class="category__link">
                      <div class="category__img">
                        <img src="/img/view-all.jpg" alt="Viewl All" />
                      </div>
                      <div class="category__name pt-1">View All</div>
                    </a>
                  </div>
        </section>

        <!-- Latest Start -->

        <section class="latest">
          <div class="latest__title">
            <h2>Latest Recipes</h2>
            <a href="/explore-latest" class="ms-auto">View More</a>
          </div>
          <div class="latest__recipes">
            <% if(food !='' ) { %>
              <% food.latest.forEach(function(recipe, index){ %>
                <a href="/recipe/<%= recipe._id %>" class="category__link">
                  <div class="category__img category__img--large shadow">
                    <img src="/<%= recipe.image %>" alt="<%= recipe.name %>" loading="lazy">
                  </div>
                  <div class="pt-1">
                    <%= recipe.name %>
                  </div>
                </a>
                <% }) %>
                  <% } else { %>
                    <p>No items found.</p>
                    <% } %>
          </div>
        </section>
